<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp">

    <!-- 区域1：Space Stations -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_station"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/group_flight"
        app:layout_constraintHorizontal_weight="1">

        <ImageView
            android:id="@+id/space_station"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/space_station_icon"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/titleSpaceStations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Space Stations"
            android:textColor="#808080"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/space_station"
            app:layout_constraintStart_toStartOf="@+id/space_station"
            app:layout_constraintEnd_toEndOf="@+id/space_station"
            android:gravity="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 区域2：Flights -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_flight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/group_station"
        app:layout_constraintTop_toTopOf="@+id/group_station"
        app:layout_constraintEnd_toStartOf="@+id/group_rover"
        app:layout_constraintHorizontal_weight="1">

        <ImageView
            android:id="@+id/rocket"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/rocket_icon"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/flights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flights"
            android:textColor="#808080"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/rocket"
            app:layout_constraintStart_toStartOf="@+id/rocket"
            app:layout_constraintEnd_toEndOf="@+id/rocket"
            android:gravity="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 区域3：Rovers -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_rover"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/group_flight"
        app:layout_constraintTop_toTopOf="@+id/group_station"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1">
        <ImageView
            android:id="@+id/rover"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/rover_icon"
            android:scaleType="centerInside"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/rovers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rovers"
            android:textColor="#808080"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/rover"
            app:layout_constraintStart_toStartOf="@+id/rover"
            app:layout_constraintEnd_toEndOf="@+id/rover"
            android:gravity="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/departure"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_flight"
        app:layout_constraintBottom_toTopOf="@id/details"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/tv_dca"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="-10dp"
            android:background="#2E7D32"
            android:gravity="center"
            android:text="DCA"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_arrow"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_mars"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="50dp"
            android:background="#2E7D32"
            android:gravity="center"
            android:text="MARS"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/iv_arrow"
            app:layout_constraintTop_toTopOf="parent" />
        <!-- 中间区域：双向箭头图标 -->
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/double_arrows"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/departure">

        <!-- 1 Traveller 区域 -->
        <Switch
            android:id="@+id/one_way_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:background="#D2691E"
            android:minHeight="48dp"
            android:padding="12dp"
            android:switchPadding="16dp"
            android:text="One Way"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:thumbTint="#FFFFFF"
            android:trackTint="#D2691E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_one_traveller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#D2691E"
            android:gravity="center"
            android:padding="12dp"
            android:text="1 Traveller"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/one_way_switch"
            app:layout_constraintTop_toBottomOf="@+id/one_way_switch" />

        <ImageView
            android:id="@+id/iv_small_rocket"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/rocket_icon"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toTopOf="@+id/depart"
            app:layout_constraintEnd_toStartOf="@+id/iv_planet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_planet"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/galaxy"
            app:layout_constraintBottom_toTopOf="@+id/depart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_small_rocket"/>

        <Button
            android:id="@+id/depart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2E7D32"
            android:gravity="center"
            android:padding="12dp"
            android:text="DEPART"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>